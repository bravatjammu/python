pipeline{
    agent{ label 'build_pipeline' }
    triggers{ cron '0 * * * *'}
    stages{
        stage( 'checkout' ){
            steps{
                git url: 'https://github.com/bravatjammu/python-sample-vscode-flask-tutorial.git',
                    branch: 'master'

            }
        }
        stage('build'){
            steps{
                sh 'pip install -r requirements.txt'
                 sh 'flake8'

            }
        }
        stage('test'){
            steps{
                sh ' pip install pytest pytest-azurepipelines '
                sh ' pip install pytest-cov '
                sh ' /home/jenkins/.local/bin/pytest --doctest-modules --junitxml=junit/test-results.xml --cov=. --cov-report=xml'
            }
        }

        stage( 'publish'){
            steps{
                junit testResults: '**/test-*.xml'
            }
        }

    }

}
